import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

public class PostgreSQLConnection {

    public static void main(String[] args) {
        
        // Carregar o driver do PostgreSQL 
        try {
            Class.forName("org.postgresql.Driver");
        } catch (ClassNotFoundException e) {
            System.out.println("Driver do PostgreSQL não encontrado.!");
            e.printStackTrace();
            return;
        }
        
        // URL do banco de dados
        String url = "jdbc:postgresql://localhost:5432/DadosGerais";
        String user = "postgres"; 
        String password = "1234"; 

        // Tentando conectar
        try (Connection conn = DriverManager.getConnection(url, user, password)) {
            if (conn != null) {
                System.out.println("Conexão bem-sucedida com o PostgreSQL!");
            } else {
                System.out.println("Falha ao se conectar com o PostgreSQL.");
            }
        } catch (SQLException e) {
            System.out.println(e.getMessage());
        }
    }
}
